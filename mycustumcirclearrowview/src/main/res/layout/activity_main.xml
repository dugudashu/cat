<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.bawei.com.mycustumcirclearrowview.MainActivity">
    <Button
        android:onClick="btn_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击加速"
        />
    <Button
        android:onClick="btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击改变颜色"
        />
    <Button
        android:onClick="btn_slow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击减速"
        />
    <Button
        android:onClick="btn_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击暂停/重新启动"
        />

    <www.bawei.com.mycustumcirclearrowview.MyCircleArrow
        android:id="@+id/my_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circlr_bound_color="@color/colorAccent"
        app:circlr_bound_width="3dp"
        />






</LinearLayout>
